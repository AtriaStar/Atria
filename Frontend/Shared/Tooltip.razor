<div class="tooltip-blazor" style="@(Underline ? "border-bottom: 1px dotted black;" : "")">
    <span>@Text</span>
    @ChildContent
</div>

@code {

    [Parameter]
    public string Text { get; set; } = null!;

    [Parameter]
    public bool Underline { get; set; } = true;

    [Parameter]
    public RenderFragment ChildContent { get; set; } = null!;

}
