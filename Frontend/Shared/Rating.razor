@using System.Globalization
<Tooltip Underline="false" Text="@((ReviewAverage / 5).ToString("P1"))">
	<i class="fa stars">
		@{ var percentage = ReviewAverage * 100 / 5; }
		<i class="fa stars stars-child rating-color" style="width: @percentage.ToString(CultureInfo.InvariantCulture)%;"></i>
		<i class="fa stars stars-child rating-uncolored" style="width: @((100 - percentage).ToString(CultureInfo.InvariantCulture))%;
		                                                        right: 0; transform: scaleX(-1);"></i>
	</i>
</Tooltip>

@code {
	[Parameter]
	public double ReviewAverage { get; set; }
}
