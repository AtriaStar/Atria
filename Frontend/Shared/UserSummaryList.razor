@using Models.DTO
@using Models
@foreach (User user in Users) {
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex flex-row">
                <div class="d-flex me-3 justify-content-center align-items-center">
                    @if (user.ProfilePicture is not null) {
                        <img class="avatar avatar-w" alt="avatar" src="@user.ProfilePicture">
                    }
                    else {
                        <img class="avatar avatar-w" alt="default avatar" src="images/default_avatar.png"/>
                    }
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <div class="card-text">@user.Title</div>
                    <h5 class="card-title">
                        <NavLink href="@GetHref(user)">@user.FirstNames @user.LastName</NavLink>
                    </h5>
                    <div class="card-text">@user.Biography</div>
                    <div class="card-text">
                        <small class="text-muted">@user.Email</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public IEnumerable<User> Users { get; set; } = null!;

    private string GetHref(User user) {
        return "profile/" + user.Id;
    }

}