@using Models.DTO
@foreach (UserDto userDto in UserDtos) {
    <div class="col">
        <div class="card h-100">
            <div class="card-body d-flex flex-row">
                <div class="d-flex me-3 justify-content-center align-items-center">
                    @if (userDto.ProfilePictureUrl is not null) {
                        <img class="avatar avatar-w" alt="avatar" src="@userDto.ProfilePictureUrl">
                    }
                    else {
                        <img class="avatar avatar-w" alt="avatar" src="images/default_avatar.png"/>
                    }
                </div>
                <div class="d-flex flex-column justify-content-center">
                    <div class="card-text">@userDto.Title</div>
                    <h5 class="card-title">
                        <NavLink href="@getHref(userDto)">@userDto.FirstNames @userDto.LastName</NavLink>
                    </h5>
                    <div class="card-text">@userDto.Biography</div>
                    <div class="card-text">
                        <small class="text-muted">@userDto.Email</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {

    [Parameter]
    public IList<UserDto> UserDtos { get; set; } = null!;

    private string getHref(UserDto userDto) {
        return "user/" + userDto.Id;
    }

}