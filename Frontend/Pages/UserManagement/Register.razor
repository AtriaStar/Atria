@page "/Register"
@using Microsoft.AspNetCore.Components
@using Models


<div class="row justify-content-center mt-4">
    <div class="col-md-5">
        <div class="card mt-3 mb-3">
            <div class="card-header text-center">
                <h2>Registrieren</h2>
            </div>
            <div class="card-body container">
                <EditForm OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>
                    <div class="form-group row">
                        <label for="lastName" class="form-label">Name</label>
                        <div>
                            <InputText id="lastName" class="form-control" @bind-Value="lastName"></InputText>
                            <ValidationMessage For="() => lastName"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="firstName" class="form-label">Vorname</label>
                        <div>
                            <InputText id="firstName" class="form-control" @bind-Value="firstNames"></InputText>
                            <ValidationMessage For="() => firstNames"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="email" class="form-label">E-Mail</label>
                        <div>
                            <InputText id="email" class="form-control" @bind-Value="email"></InputText>
                            <ValidationMessage For="() => email"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="password" class="form-label">Passwort</label>
                        <div>
                            <InputText id="password" class="form-control" @bind-Value="password"></InputText>
                            <ValidationMessage For="() => password"></ValidationMessage>
                        </div>
                    </div>
                    
                    <div class="form-group row justify-content-end">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Registrieren</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    
</div>

