@page "/login"
@using Microsoft.AspNetCore.Components
@using System.Text
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavManager
@inject IHttpClientFactory ClientFactory

@* TODO page title*@

<div class="container overflow-hidden">
    <div class="row p-2 pt-4">
        <div class="col text-center">
            <h2>Login</h2>
        </div>
    </div>
    <div class="row p-2 justify-content-center">
        <div class="col-lg-5 card">
            <div class="card-body">
                <EditForm Model="_login" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>
                    <div class="row py-3">
                        <div class="col">
                            <label for="email" class="form-label">E-Mail</label>
                            <div>
                                <InputText type="email" id="email" class="form-control" @bind-Value="_login.Email"></InputText>
                                <ValidationMessage For="() => _login.Email"></ValidationMessage>
                            </div>
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col">
                            <label for="password" class="form-label">Passwort</label>
                            <div>
                                <InputText type="password" id="password" class="form-control" @bind-Value="_login.Password"></InputText>
                                <ValidationMessage For="() => _login.Password"></ValidationMessage>
                            </div>
                        </div>
                    </div>
                    <div class="row py-3 justify-content-center">
                        <div class="col-6 d-grid">
                            <button type="submit" class="btn btn-primary">Anmelden</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="row p-2 justify-content-center">
        <div class="col-auto text-center">
            Sie sind noch nicht registriert? <NavLink href="register">Hier registrieren</NavLink>
        </div>
    </div>
</div>

@code {
    readonly Models.DTO.Login _login = new();

    private async void HandleValidSubmit() {
        var request = new HttpRequestMessage(HttpMethod.Post,
            "https://localhost:7038/api/login");

        request.Content = new StringContent(JsonConvert.SerializeObject(_login), Encoding.UTF8, "application/json");
        
        var client = ClientFactory.CreateClient();

        var response = await client.SendAsync(request);

        if (response.IsSuccessStatusCode)
        {
            NavManager.NavigateTo("/");
        }
        else
        {
            NavManager.NavigateTo("/register");
        }
    }
}