<div class="row mb-2">
    <div class="col-2">
        <div class="list-group">
            <a href="" class="list-group-item d-flex justify-content-between align-items-center active">
                Webservices
                <span class="badge rounded-pill bg-primary">14</span>
            </a>
            <a href="searchUser" class="list-group-item d-flex justify-content-between align-items-center">
                Nutzer
                <span class="badge rounded-pill bg-primary">14</span>
            </a>
        </div>
    </div>
</div>

<div class="row mb-2">
    <div class="col-2">
        <div class="list-group">
            <div class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">Filter</h5>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label" for="flexCheckDefault">
                        Online
                        <span class="badge rounded-pill bg-primary">14</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label" for="flexCheckChecked">
                        Lesezeichen
                        <span class="badge rounded-pill bg-primary">14</span>
                    </label>
                </div>

                <h7 class="mb-1">Bewertung</h7>
                <div class="rating">
                    <input type="radio" name="rating" value="5" id="5"><label for="5">☆</label>
                    <input type="radio" name="rating" value="4" id="4"><label for="4">☆</label>
                    <input type="radio" name="rating" value="3" id="3"><label for="3">☆</label>
                    <input type="radio" name="rating" value="2" id="2"><label for="2">☆</label>
                    <input type="radio" name="rating" value="1" id="1"><label for="1">☆</label>
                </div>

                <h7 class="mb-1">Tags</h7>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label" for="flexCheckDefault">
                        Tag1
                        <span class="badge rounded-pill bg-primary">14</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label" for="flexCheckChecked">
                        Tag2
                        <span class="badge rounded-pill bg-primary">14</span>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="">
                    <label class="form-check-label" for="flexCheckChecked">
                        Tag3
                        <span class="badge rounded-pill bg-primary">14</span>
                    </label>
                </div>
                <div style="text-align:right; font-size:80%;">
                    <button type="button" class="btn btn-Link btn-sm" data-bs-toggle="modal" data-bs-target="#tagModal">
                        <u>weitere Tags</u>
                    </button>
                </div>
                <div class="modal" id="tagModal" tabindex="-1" aria-labelledby="tagModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered ">
                        <div class="modal-content">


                            <div class="modal-header pb-1 pt-2" style="border:none">
                                <h5 class="modal-title" id="tagModalLabel">Tags</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>


                            <div class="modal-body pt-1 pb-1">
                                <div class="row pb-2">
                                    <div class="col">
                                        <div class="card rounded-1" style="background-color:lightgray">
                                            <div class="card-body pt-0 pb-0 ps-1">
                                                taglogic.
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row small pb-2 justify-content-end">
                                    <div class="col-sm-5">
                                        <input class="form-control form-control-sm rounded-pill" type="search" placeholder="Suche nach..."> @*TODO searchbar überarbeiten*@
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="border border-secondaryp-2 mb-2">
                                            <div class="overflow-auto" style="max-height: 200px">
                                                Tags with logicx
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between pt-1 pb-2">
                                    <button type="button" class="btn btn-danger btn-sm me-2">
                                        Alle Löschen
                                    </button>
                                    <button type="button" class="btn btn-success btn-sm" data-bs-dismiss="modal">
                                        Anwenden
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>