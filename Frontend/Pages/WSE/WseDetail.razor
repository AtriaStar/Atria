@page "/wse"

<PageTitle>Atria - WseName</PageTitle>

<div class="container-lg mt-2">

    <div class="d-grid gap-2 mb-4 d-md-flex justify-content-md-end">
        <div class="btn-group d-flex justify-content-end">
            <button class="btn btn-success" type="button">
                Bearbeiten
            </button>
        </div>
        <div class="btn-group d-flex justify-content-end">
            <button class="btn btn-danger" type="button">
                Löschen
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-9">

            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-auto mt-sm-1">
                            <i class="fa-solid fa-circle text-success"/>
                        </div>
                        <div class="col ps-0">
                            <h3 class="card-title fw-bold">
                                Name
                            </h3>
                        </div>
                        <div class="col-auto d-flex align-content-end">
                            @*example link*@
                            <h5><a class="fa-solid fa-arrow-up-right-from-square text-decoration-none" title="Zur Webservice" href="https://www.google.com/"/></h5>
                        </div>
                    </div>
                    <h5 class="card-subtitle mb-2 text-muted">
                        Ansprechpartner
                        <a class="card-link fs-6" href="/wse">Kollaboratoren</a>
                    </h5>
                    <div class="card-text">Kurzbeschreibung</div>
                </div>
            </div>

            <div class="card mb-3">
                <h5 class="card-header">Änderungshistorie</h5>
                <div class="card-body">
                    <div class="card-text">This is some text within a card body.</div>
                </div>
            </div>
    
            <div class="card mb-3">
                <h5 class="card-header">
                    Dokumentation
                    <a class="fa-solid fa-arrow-up-right-from-square text-decoration-none" title="Zur Dokumetation"/>
                </h5>
                <div class="card-body">
                    <div class="card-text">This is some text within a card body.</div>
                </div>
            </div>

            <div class="card mb-3">
                <h5 class="card-header">Volltextbeschreibung</h5>
                <div class="card-body">
                    <div class="card-text">This is some text within a card body.</div>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Bewertung</h5>
                    <div class="card-text">
                        <div class="row">
                            <div class="col-auto">
                                <i class="fa fa-star rating-color"/>
                                <i class="fa fa-star rating-color"/>
                                <i class="fa fa-star rating-color"/>
                                <i class="fa fa-star rating-color"/>
                                <i class="fa fa-star rating-color"/>
                            </div>
                            <div class="col-auto">
                                <p>11 Bewrtungen</p>
                            </div>
                        </div>
                        <p>zu den Bewertungen</p>
                    </div>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Tags</h5>
                    @*mock tags*@
                    <div class="card-text">
                        @for (int i = 0; i <= 20; i++) {
                            <div class="badge bg-info me-1" value="@i">Tag @i</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    

</div>
