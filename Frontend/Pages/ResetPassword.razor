@page "/ResetPassword"
@using Microsoft.AspNetCore.Components
@using Models

<div class="container overflow-hidden">
    <div class="row p-3 justify-content-center">
        <div class="col-md-5 text-center">
            <h2>Passwort zurücksetzen</h2>
        </div>
    </div>
    <div class="row p-3 justify-content-center">
        <div class="col-md-5 card">
            <div class="card-body">
                <EditForm OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>
                    <div class="row py-3">
                        <div class="col">
                            <label for="email" class="form-label">E-Mail</label>
                            <div>
                                <InputText id="email" class="form-control" @bind-Value="email"></InputText>
                                <ValidationMessage For="() => email"></ValidationMessage>
                            </div>
                        </div>
                    </div>
                    <div class="row py-3">
                        <div class="col">
                            <label for="password" class="form-label">Passwort</label>
                            <div>
                                <InputText id="password" class="form-control" @bind-Value="password"></InputText>
                                <ValidationMessage For="() => password"></ValidationMessage>
                            </div>
                        </div>
                    </div>
                    <div class="row py-3 justify-content-end">
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Anmelden</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
    <div class="row p-3 justify-content-center">
        <div class="col-md-5 text-center">
            <NavLink href="login">Stattdessen anmelden</NavLink>
        </div>
    </div>
</div>

@code {
	string email = "";
	string password = "";

	private void HandleValidSubmit()
    {
        throw new NotImplementedException();
    }

}